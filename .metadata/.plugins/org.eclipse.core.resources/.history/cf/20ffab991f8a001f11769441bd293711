#include "UsartController.h"
#include "UsartDataConfig.h"
#include "UsartRouter.h"

void UsartCallback(){
	uint8_t byte = USART1->DR;
	if(byte == HEADER || flag){
		buffer[parsedData] = byte;
		if(parsedData == 3)
			length = byte;
		if(parsedData >= length+4){
			RxData *rxdata = &buffer;
			ParsingData(rxdata);
			length = 0;
			flag = 0;
		}
		parsedData++;
	}
}

